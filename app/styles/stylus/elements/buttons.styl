@import '../config'

.btn
  overflow visible

.upload-button
  margin: 4px auto;
  width: 200px;

.btn
  padding 0 !important
  border 0
  position relative
  &.disabled
    opacity .4
    cursor default
  &:active
  &:hover
    cursor pointer
  &:focus
    outline none

.btn-primary
  color clyp_cream
  //background-color light_purple
  border 1px solid // light_purple
  &:active
  &:hover
    background-color light_purple_dark
    border 1px solid light_purple_dark

.btn-sm
  font-size 16px
  line-height 28px
  width 112px
  height 30px
  border-radius 100px

.btn.active.focus
.btn.active:focus
.btn.focus
.btn:active.focus
.btn:active:focus
.btn:focus
    outline 0


.volume-button
  width 37px
  height 64px
  cursor pointer
